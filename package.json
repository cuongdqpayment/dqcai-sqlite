{
  "name": "@dqcai/sqlite",
  "version": "3.2.4",
  "type": "module",
  "description": "Universal SQLite adapter for Node.js, Browser, Deno, Bun, and React Native with a unified API and query builder.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.mjs",
  "browser": "lib/index.umd.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./lib/index.d.ts"
      ]
    }
  },
  "files": [
    "lib",
    "README.md",
    "README.html"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "clean": "rimraf lib",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "release": "npm publish --access public",
    "release:patch": "npm version patch && npm run build && npm publish --access public",
    "release:minor": "npm version minor && npm run build && npm publish --access public",
    "release:major": "npm version major && npm run build && npm publish --access public"
  },
  "keywords": [
    "sqlite",
    "dqcai",
    "doanquoccuong",
    "cuongdq",
    "node",
    "browser",
    "deno",
    "bun",
    "react-native",
    "expo",
    "universal",
    "database",
    "query-builder"
  ],
  "author": "Đoàn Quốc Cường",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuongdqpayment/dqcai-sqlite.git"
  },
  "bugs": {
    "url": "https://github.com/cuongdqpayment/dqcai-sqlite/issues"
  },
  "homepage": "https://github.com/cuongdqpayment/dqcai-sqlite#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^18.0.0",
    "@types/react-native-sqlite-storage": "^6.0.5",
    "better-sqlite3": "^12.4.1",
    "esbuild": "^0.25.9",
    "react-native": ">=0.60.0",
    "react-native-sqlite-storage": "^6.0.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.49.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^11.0.3",
    "rimraf": "^6.0.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@dqcai/logger": "^3.0.4"
  },
  "peerDependencies": {
    "react-native": ">=0.60.0",
    "react-native-sqlite-storage": ">=6.0.0"
  }
}
